<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.abc_analytics.rebook.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_scraps"
        android:name="com.abc_analytics.rebook.ui.scraps.ScrapListFragment"
        android:label="@string/title_scraps"
        tools:layout="@layout/fragment_scrap" />

    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.abc_analytics.rebook.ui.detail.DetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/navigation_capture"
        android:name="com.abc_analytics.rebook.ui.capture.CaptureFragment"
        android:label="fragment_capture"
        tools:layout="@layout/fragment_capture" />
</navigation>